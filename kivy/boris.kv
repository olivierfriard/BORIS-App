#: import main main
##: import ListAdapter kivy.adapters.listadapter.ListAdapter
##: import la kivy.adapters.listadapter


BorisRoot:
    canvas:
        Color:
            rgba: 0.9764705882352941, 0.9764705882352941, 0.9764705882352941, 1

<BorisRoot>:
    StartPageForm


<StartPageForm>:
    lb_version_input: lbversion
    orientation: "vertical"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: "logo_boris_500px.png"
    Label:
        id: lbversion
        height: "40dp"
        size_hint_y: None
        text: root.ver()

    BoxLayout:
        size_hint_y: .2

        Button:
            text: "Open project"
            size_hint_x: 0.8
            font_size: "20dp"
            on_press: root.show_SelectProjectForm()

        Button:
            text: "more..."
            size_hint_x: 0.2
            font_size: "15dp"
            on_press: root.more()

<MoreForm>
    orientation: "vertical"
    Image:
        source: "logo_boris_500px.png"
    Label:
        height: "40dp"
        size_hint_y: None
        text: root.ver()
    BoxLayout:
        size_hint_y: 0.2
        Button:
            text: "Go back"
            size_hint_x: .2
            font_size: "20dp"
            on_press: root.cancel()
        Button:
            text: "About BORIS"
            size_hint_x: .4
            font_size: "20dp"
            on_press: root.about()
        Button:
            text: "Quit"
            size_hint_x: .4
            font_size: "20dp"
            on_press: root.exit()


<SelectProjectForm>
    orientation: "vertical"

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: title
        size_hint_y: 0.1
        text: "Select a BORIS project file and then press \"Open project\" button"
    FileChooserListView:
        size_hint_y: 0.7
        id: projectfilechooser
        rootpath: app.primary_storage_dir
        #path: '/data'
        filters: ["*.boris"]
    BoxLayout:
        size_hint_y: 0.2
        Button:
            text: "Go back"
            size_hint_x: 0.2
            font_size: "20dp"
            on_press: root.cancel()
        Button:
            text: "Open project"
            size_hint_x: 0.8
            font_size: "20dp"
            on_press: root.open_project(projectfilechooser.path, projectfilechooser.selection)



<ViewProjectForm>
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.85
        Label:
            id: lbl
            size_hint_y: 0.1
            font_size: "20dp"
            text: "View project"
        Label:
            id: project_info
            size_hint_y: 0.9
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.15

        Button:
            id: btnGoBack
            text: "Go back"
            size_hint_x: 0.2
            font_size: "25dp"
            on_press: root.go_back()

        Button:
            id: btnStartObs
            text: "New observation"
            size_hint_x: 0.4
            font_size: "25dp"
            on_press: root.new_observation()


<RV>:
    viewclass: 'CustomButton'  # defines the viewtype for the data items.
    orientation: "vertical"
    spacing: 40
    padding:10, 10
    space_x: self.size[0]/3

#    Button:
#        text: "test"

    RecycleBoxLayout:
        color:(0, 0.7, 0.4, 0.8)
        default_size: None, dp(56)
        default_size_hint: 0.4, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical' # defines the orientation of data items


