<InfoPopup>
    title: "BORIS"
    title_size: "20dp"
    font_size: "20dp"
    id: info_popup
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint_y: 0.8
            font_size: "20dp"
            text: "Are you sure you want to stop the current observation?"
        BoxLayout:
            size_hint_y: .2
            Button:
                text: "Close"
                size_hint_x: 0.5
                font_size: "20dp"
                on_press: root.close()
