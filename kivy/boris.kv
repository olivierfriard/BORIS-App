BorisRoot:
    canvas:
        Color:
            rgba: 0.9764705882352941, 0.9764705882352941, 0.9764705882352941, 1

<BorisRoot>:
    StartPageForm


<StartPageForm>:
    lb_version_input: lbversion
    orientation: "vertical"

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source: "logo_boris_500px.png"
    Label:
        id: lbversion
        height: "40dp"
        size_hint_y: None
        color: 0, 0, 0, 1
        text: root.ver()

    BoxLayout:
        size_hint_y: .2

        Button:
            text: "Open project"
            size_hint_x: 0.8
            font_size: "20dp"
            on_press: root.show_SelectProjectForm()

        Button:
            text: "more..."
            size_hint_x: 0.2
            font_size: "15dp"
            on_press: root.more()

<MoreForm>
    orientation: "vertical"
    Image:
        source: "logo_boris_500px.png"
    Label:
        height: "40dp"
        size_hint_y: None
        text: root.ver()
    BoxLayout:
        size_hint_y: 0.2
        Button:
            text: "Go back"
            size_hint_x: .2
            font_size: "20dp"
            on_press: root.cancel()
        Button:
            text: "About BORIS"
            size_hint_x: .4
            font_size: "20dp"
            on_press: root.about()
        Button:
            text: "Quit"
            size_hint_x: .4
            font_size: "20dp"
            on_press: root.exit()
#

<SelectProjectForm>
    orientation: "vertical"
    
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: title
        size_hint_y: 0.1
        text: "Select a BORIS project file and then press \"Open project\" button\nCurrent storage: " + app.app_primary_storage_dir
    FileChooserListView:
        size_hint_y: 0.7
        id: projectfilechooser
        rootpath: app.app_primary_storage_dir
        #path: '/data'
        filters: ["*.boris"]
    BoxLayout:
        size_hint_y: 0.2
        Button:
            text: "Go back"
            size_hint_x: 0.2
            font_size: "20dp"
            on_press: root.cancel()
        Button:
            text: "Open project"
            size_hint_x: 0.8
            font_size: "20dp"
            on_press: root.open_project(projectfilechooser.path, projectfilechooser.selection)

#

<ViewProjectForm>
    # display summary of project
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.85
        Label:
            id: lbl
            size_hint_y: 0.1
            font_size: "20dp"
            text: "View project"
        
        TextInput:
            id: project_info
            size_hint_y: 0.9
            readonly: True

    BoxLayout:  # taskbar
        orientation: "horizontal"
        size_hint_y: 0.15
        Button:
            id: btnGoBack
            text: "Go back"
            size_hint_x: 0.2
            font_size: "25dp"
            on_press: root.go_back()
        Button:
            id: btnViewEthogram
            text: "View ethogram"
            size_hint_x: 0.4
            font_size: "25dp"
            on_press: root.view_ethogram()
        Button:
            id: btnStartObs
            text: "New observation"
            size_hint_x: 0.4
            font_size: "25dp"
            on_press: root.new_observation()
#

<ViewEthogramForm>
# display summary of project
    orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.85
        Label:
            id: lbl
            size_hint_y: 0.1
            font_size: "20dp"
            text: "Ethogram"
        
        TextInput:
            id: project_info
            size_hint_y: 0.9
            font_size: "20dp"
            readonly: True

    BoxLayout:  # taskbar
        orientation: "horizontal"
        size_hint_y: 0.15
        Button:
            id: btnGoBack
            text: "Go back"
            size_hint_x: 0.2
            font_size: "25dp"
            on_press: root.go_back()
        Button:
            id: btnViewProject
            text: "View project"
            size_hint_x: 0.4
            font_size: "25dp"
            on_press: root.view_project()
        Button:
            id: btnStartObs
            text: "New observation"
            size_hint_x: 0.4
            font_size: "25dp"
            on_press: root.new_observation()
#


<StartObservationForm>
    orientation: "vertical"
    obsid_input: obsid
    obsdate_input: obsdate
    obsdescription_input: obsdescription
    day_time_input: day_time
    epoch_time_input: epoch_time

    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.9
        BoxLayout:
            size_hint_y: 0.2
            Label:
                size_hint_x: 0.2
                text: "Observation id"
                font_size: "20dp"
            TextInput:
                size_hint_x: 0.8
                multiline: False
                font_size: "25dp"
                id: obsid

        BoxLayout:
            size_hint_y: 0.2
            Label:
                size_hint_x: 0.2
                text: "Observation date"
                font_size: "20dp"
            TextInput:
                size_hint_x: 0.6
                id: obsdate
                multiline: False
                font_size: "25dp"
            Button:
                text: "set now"
                size_hint_x: 0.2
                font_size: "20dp"
                on_press: root.set_date_to_now()

        BoxLayout:
            size_hint_y: 0.6
            Label:
                size_hint_x: 0.2
                text: "Description"
                font_size: "20dp"
            TextInput:
                size_hint_x: 0.8
                id: obsdescription
                multiline: True
                font_size: "20dp"

        BoxLayout:
            size_hint_y: 0.2
            BoxLayout:
                Label:
                    size_hint_x: 0.8
                    text: "Start from day time (HH:MM:SS)"
                    font_size: "20dp"
                CheckBox:
                    size_hint_x: 0.2
                    id: day_time

        BoxLayout:
            size_hint_y: 0.2
            BoxLayout:
                Label:
                    size_hint_x: 0.8
                    text: "Epoch time"
                    font_size: "20dp"
                CheckBox:
                    size_hint_x: 0.2
                    id: epoch_time


    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: "Go back"
            size_hint_x: 0.2
            font_size: "20dp"
            on_press: root.cancel()
        Button:
            text: "Independent var"
            size_hint_x: 0.4
            font_size: "20dp"
            on_press: root.indep_var()
        Button:
            text: "Start observation"
            size_hint_x: 0.4
            font_size: "20dp"
            on_press: root.start()


<ConfirmStopPopup>
    title: "BORIS"
    title_size: "20dp"
    font_size: "20dp"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label
            size_hint_y: 0.8
            font_size: "20dp"
            text: "Are you sure you want to stop the current observation?"
        BoxLayout:
            size_hint_y: .2
            Button:
                text: "Yes"
                size_hint_x: 0.5
                font_size: "20dp"
                on_press: root.yes()
            Button:
                text: "No"
                size_hint_x: 0.5
                font_size: "20dp"
                on_press: root.no()


<AskExistingObservation>
    title: "BORIS - Warning!"
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y: 0.3
            id: lb_obs_exists
            font_size: "20dp"
            size_hint_y: None
            text: "An observation with the same id already exists"

        BoxLayout:
            size_hint_y: 0.5

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Cancel"
                size_hint_x: 1
                font_size: "20dp"
                on_press: root.cancel()
            Button:
                text: "Overwrite"
                size_hint_x: 1
                font_size: "20dp"
                on_press: root.overwrite()


