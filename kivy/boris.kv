<SendObsForm>
    orientation: "vertical"
    url_input: url
    lb_observation_id: label2_id

    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.2
        Label:
            text: "Send selected observation to BORIS"
            font_size: "20dp"
        Label:
            id: label2_id
            text: ""
            font_size: "20dp"

    BoxLayout:
        size_hint_y: 0.2
        BoxLayout:
            Label:
                size_hint_x: 0.1
                text: "URL"
                font_size: "30dp"
            TextInput:
                size_hint_x: 0.9
                font_size: "30dp"
                id: url
                multiline: False

    BoxLayout:
        size_hint_y: 0.4

    BoxLayout:
        size_hint_y: 0.2

        Button:
            text: "Go back"
            size_hint_x: 0.2
            font_size: "20dp"
            on_press: root.cancel()

        Button:
            text: "Send observation"
            size_hint_x: 0.8
            font_size: "20dp"
            on_press: root.send_obs()



<StartObservationForm>
    orientation: "vertical"
    obsid_input: obsid
    obsdate_input: obsdate
    obsdescription_input: obsdescription

    BoxLayout:
        orientation: "vertical"
        size_hint_y: 0.9
        BoxLayout:
            size_hint_y: 0.2
            Label:
                size_hint_x: 0.2
                text: "Observation id"
                font_size: "15dp"
            TextInput:
                size_hint_x: 0.8
                multiline: False
                font_size: "25dp"
                id: obsid

        BoxLayout:
            size_hint_y: 0.2
            Label:
                size_hint_x: 0.2
                text: "Observation date"
                font_size: "15dp"
            TextInput:
                size_hint_x: 0.8
                id: obsdate
                multiline: False
                font_size: "25dp"

        BoxLayout:
            size_hint_y: 0.6
            Label:
                size_hint_x: 0.2
                text: "Description"
                font_size: "15dp"
            TextInput:
                size_hint_x: 0.8
                id: obsdescription
                multiline: True
                font_size: "20dp"
    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: "Go back"
            size_hint_x: 0.2
            font_size: "20dp"
            on_press: root.cancel()
        Button:
            text: "Independent var"
            size_hint_x: 0.4
            font_size: "20dp"
            on_press: root.indep_var()
        Button:
            text: "Start observation"
            size_hint_x: 0.4
            font_size: "20dp"
            on_press: root.start()


<ConfirmStopPopup>
    title: "Are you sure you want to stop the current observation?"
    title_size: "20dp"
    font_size: "20dp"
    BoxLayout:
        size_hint_y: None
        Button:
            text: "Yes"
            size_hint_x: 0.5
            font_size: "20dp"
            on_press: root.yes()
        Button:
            text: "No"
            size_hint_x: 0.5
            font_size: "20dp"
            on_press: root.no()

<ConfirmUpdatePopup>
    title: "Are you sure you want to update BORIS App?"
    title_size: "30dp"
    font_size: "20dp"
    BoxLayout:
        size_hint_y: None
        Button:
            text: "Yes"
            size_hint_x: 0.5
            font_size: "20dp"
            on_press: root.yes()
        Button:
            text: "No"
            size_hint_x: 0.5
            font_size: "20dp"
            on_press: root.no()

<AskForExistingFile>
    title: "BORIS"
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y: 0.3
            id: lbProjectExists
            font_size: "20dp"
            size_hint_y: None
            text: "A project with the same file name already exists on this device"
        BoxLayout:
            size_hint_y: 0.5

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Cancel"
                size_hint_x: 1
                font_size: "20dp"
                on_press: root.cancel()
            Button:
                text: "Overwrite"
                size_hint_x: 1
                font_size: "20dp"
                on_press: root.overwrite()
            Button:
                text: "Rename it"
                size_hint_x: 1
                font_size: "20dp"
                on_press: root.rename()

